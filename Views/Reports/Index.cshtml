@model IEnumerable<DealershipExpenseTracker.Models.ExpenseReportViewModel>

@{
    ViewData["Title"] = "Expense Report";
}

<div class="hero">
    <h1 class="display-4">Expense Report</h1>
    <p class="lead">Analyze your dealership spending efficiently.</p>
</div>

<div class="alert alert-info text-center mt-3">
    <h4>Total Expenses: <strong>$@ViewBag.TotalExpenses.ToString("0.00")</strong></h4>
</div>

@if (Model.Any())
{
    <table class="table table-dark table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>Category</th>
                <th>Total Amount</th>
                <th>Number of Expenses</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>$@item.TotalAmount.ToString("0.00")</td>
                    <td>@item.ExpenseCount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted mt-4">No expenses found.</p>
}
