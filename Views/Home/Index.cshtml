@{
    ViewData["Title"] = "Home Page";
}

<div class="hero text-center">
    <h1 class="display-3">Welcome to Dealership Expense Tracker System</h1>
    <p class="lead">Your all-in-one dealership expense tracker.</p>
    <a href="/Expenses/Create" class="btn btn-lg btn-light mt-3">Add New Expense</a>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h5 class="card-title">View Expenses</h5>
                    <p class="card-text">Keep track of all expenses with detailed categorization.</p>
                    <a href="/Expenses" class="btn btn-primary btn-lg w-100">Go to Expenses</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Expense</h5>
                    <p class="card-text">Easily add new expenses to manage dealership costs.</p>
                    <a href="/Expenses/Create" class="btn btn-success btn-lg w-100">Add Expense</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h5 class="card-title">Generate Reports</h5>
                    <p class="card-text">View detailed reports and analyze dealership spending.</p>
                    <a href="/Reports" class="btn btn-warning btn-lg w-100">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>
