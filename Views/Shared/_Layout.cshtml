<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kar Kollection</title>

    <!-- Bootstrap & Custom CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <!-- FontAwesome for Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- ✅ Modern Navigation Bar with Logo -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/logo.png" alt="Kar Kollection" height="40" class="me-2">
                    <span class="fw-bold">Kar Kollection</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/Expenses"><i class="fas fa-wallet"></i> Expenses</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reports"><i class="fas fa-chart-line"></i> Reports</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Main Content with Spacing -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- ✅ Modern Footer with Branding -->
    <footer class="footer text-center">
        <div class="container">
            <p class="mb-0">© 2024 Kar Kollection. All Rights Reserved.</p>
            <p class="small">Made for dealership finance management.</p>
        </div>
    </footer>

    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
